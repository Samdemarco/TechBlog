<div class="container">

<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label class="form-label mt-4" for="post-title">Title</label>
      <input class="form-control" type="text" id="post-title" style="max-width: 35rem;" name="post-title" />
    </div>
    <div>
      <label for="post-text">Content</label>
      <div class="form-group">
      <textarea class="form-control" name="post-text" style="max-width: 35rem;"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
  </form>
</section>
</div>

<script src="/js/add-post.js"></script>



